<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jordonproj.dotdashordie.MainActivity">

    <RelativeLayout
        android:id="@+id/listLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/training_button_text"
            android:layout_alignParentTop="true"
            android:onClick=""
            />

        <Button
            android:id="@+id/button_all_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/morse_button_text"
            android:layout_centerInParent="true"
            />
            <!--android:layout_below="@id/button_training"-->

        <Button
            android:id="@+id/button_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_button_text"
            android:layout_alignParentBottom="true"
            android:layout_alignBottom="@id/button_all_board"
            />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
